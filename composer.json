{
    "name": "webbuilders-group/silverstripe-remember-my-account",
    "description": "Adjusts the 'Keep me signed in' functionality to require re-authentication on return while remembering the account the user last signed in with.",
    "type": "silverstripe-vendormodule",
    "keywords": ["silverstripe", "authentication", "login", "security"],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Ed Chipman",
            "homepage": "https://webbuildersgroup.com",
            "role": "Developer"
        }
    ],
    "require": {
        "silverstripe/recipe-core": "~4.4",
        "silverstripe/login-forms": "~4.0"
    },
    "require-dev": {
        "webbuilders-group/silverstripe-recipe-github-ci": "~1.0"
    },
    "support": {
        "issues": "https://github.com/webbuilders-group/silverstripe-remember-my-account/issues"
    },
    "extra": {
        "expose": [
            "css"
        ]
    },
    "autoload": {
        "psr-4": {
            "WebbuildersGroup\\RememberMyAccount\\": "src/"
        }
    }
}
